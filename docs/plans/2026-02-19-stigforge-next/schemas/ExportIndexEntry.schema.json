{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://stigforge.local/schemas/export-index-entry.schema.json",
  "title": "ExportIndexEntry",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "export_id",
    "control_id",
    "rule_id",
    "title",
    "severity",
    "status",
    "evidence_paths",
    "scan_paths",
    "last_verified_at_utc",
    "hashes",
    "provenance"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "export_id": { "type": "string" },
    "control_id": { "type": "string" },
    "vuln_id": { "type": ["string", "null"] },
    "rule_id": { "type": "string" },
    "title": { "type": "string" },
    "severity": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"]
    },
    "status": {
      "type": "string",
      "enum": ["Pass", "Fail", "NotApplicable", "Open", "Error"]
    },
    "na_reason": { "type": ["string", "null"] },
    "policy_origin": { "type": ["string", "null"] },
    "evidence_paths": {
      "type": "array",
      "items": { "type": "string" }
    },
    "scan_paths": {
      "type": "array",
      "items": { "type": "string" }
    },
    "last_verified_at_utc": { "type": "string", "format": "date-time" },
    "hashes": {
      "type": "object",
      "additionalProperties": false,
      "required": ["row_sha256"],
      "properties": {
        "row_sha256": { "type": "string", "pattern": "^[A-Fa-f0-9]{64}$" }
      }
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["exporter_version", "export_run_id"],
      "properties": {
        "exporter_version": { "type": "string" },
        "export_run_id": { "type": "string" }
      }
    }
  }
}
