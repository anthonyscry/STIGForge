{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://stigforge.local/schemas/overlay.schema.json",
  "title": "Overlay",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "overlay_id",
    "name",
    "base_pack_id",
    "rule_overrides",
    "manual_answers",
    "evidence_overrides",
    "provenance"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "overlay_id": { "type": "string" },
    "name": { "type": "string" },
    "base_pack_id": { "type": "string" },
    "rule_overrides": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["control_selector", "status", "reason", "origin"],
        "properties": {
          "control_selector": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["Pass", "Fail", "NotApplicable", "Open"]
          },
          "reason": { "type": "string" },
          "origin": {
            "type": "string",
            "enum": ["policy", "waiver", "operator", "migration"]
          }
        }
      }
    },
    "manual_answers": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["control_id", "status", "reason", "answered_at_utc"],
        "properties": {
          "control_id": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["Pass", "Fail", "NotApplicable"]
          },
          "reason": { "type": "string" },
          "answered_at_utc": { "type": "string", "format": "date-time" }
        }
      }
    },
    "evidence_overrides": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["control_id", "recipe_id"],
        "properties": {
          "control_id": { "type": "string" },
          "recipe_id": { "type": "string" }
        }
      }
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["created_by", "created_at_utc", "updated_at_utc"],
      "properties": {
        "created_by": { "type": "string" },
        "created_at_utc": { "type": "string", "format": "date-time" },
        "updated_at_utc": { "type": "string", "format": "date-time" }
      }
    }
  }
}
