{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://stigforge.local/schemas/content-pack.schema.json",
  "title": "ContentPack",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "pack_id",
    "pack_name",
    "release",
    "imported_at_utc",
    "artifacts",
    "hash_manifest",
    "applicability",
    "provenance"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "pack_id": {
      "type": "string",
      "minLength": 1
    },
    "pack_name": {
      "type": "string",
      "minLength": 1
    },
    "release": {
      "type": "object",
      "additionalProperties": false,
      "required": ["version", "release_label"],
      "properties": {
        "version": { "type": "string" },
        "release_label": { "type": "string" },
        "release_date_utc": { "type": "string", "format": "date-time" }
      }
    },
    "imported_at_utc": {
      "type": "string",
      "format": "date-time"
    },
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "artifact_id",
          "artifact_kind",
          "source_path",
          "sha256",
          "confidence",
          "reason_code"
        ],
        "properties": {
          "artifact_id": { "type": "string" },
          "artifact_kind": {
            "type": "string",
            "enum": ["STIG", "SCAP", "GPO", "LGPO", "ADMX", "SCRIPT"]
          },
          "source_path": { "type": "string" },
          "sha256": { "type": "string", "pattern": "^[A-Fa-f0-9]{64}$" },
          "benchmark_ids": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          },
          "confidence": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          },
          "reason_code": { "type": "string" }
        }
      }
    },
    "hash_manifest": {
      "type": "object",
      "additionalProperties": false,
      "required": ["manifest_sha256", "files"],
      "properties": {
        "manifest_sha256": { "type": "string", "pattern": "^[A-Fa-f0-9]{64}$" },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["path", "sha256"],
            "properties": {
              "path": { "type": "string" },
              "sha256": { "type": "string", "pattern": "^[A-Fa-f0-9]{64}$" }
            }
          }
        }
      }
    },
    "applicability": {
      "type": "object",
      "additionalProperties": false,
      "required": ["os_targets", "role_tags"],
      "properties": {
        "os_targets": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["win11", "server2019", "server2022", "unknown"]
          },
          "uniqueItems": true
        },
        "role_tags": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["workstation", "member_server", "domain_controller", "lab_vm", "unknown"]
          },
          "uniqueItems": true
        }
      }
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["source", "import_tool_version", "import_run_id"],
      "properties": {
        "source": { "type": "string" },
        "import_tool_version": { "type": "string" },
        "import_run_id": { "type": "string" }
      }
    }
  }
}
