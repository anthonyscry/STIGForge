<Window x:Class="STIGForge.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:STIGForge.App.Views"
        Title="STIGForge" Height="600" Width="900" MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,20" LastChildFill="False">
            <TextBlock Text="STIGForge" FontSize="28" FontWeight="SemiBold" VerticalAlignment="Center" DockPanel.Dock="Left"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="?" Width="36" Height="36" Margin="0,0,8,0" ToolTip="Help" FontSize="16" FontWeight="Bold" Command="{Binding ShowHelpCommand}" AutomationProperties.Name="Help"/>
                <Button Content="i" Width="36" Height="36" Margin="0,0,8,0" ToolTip="About" FontSize="16" FontWeight="Bold" FontStyle="Italic" Command="{Binding ShowAboutCommand}" AutomationProperties.Name="About"/>
                <Button Content="&#x2699;" Width="36" Height="36" ToolTip="Settings" FontSize="18" Command="{Binding ShowSettingsCommand}" AutomationProperties.Name="Settings"/>
            </StackPanel>
        </DockPanel>

        <!-- Dashboard -->
        <views:DashboardView Grid.Row="1"/>
    </Grid>
</Window>
