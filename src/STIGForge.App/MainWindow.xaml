<Window x:Class="STIGForge.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:STIGForge.App.Views"
        Title="STIGForge" Height="600" Width="900" MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Window.InputBindings>
        <KeyBinding Key="R" Modifiers="Ctrl" Command="{Binding RunAutoWorkflowCommand}" />
        <KeyBinding Key="F1" Command="{Binding ShowHelpCommand}" />
        <KeyBinding Key="I" Modifiers="Alt" Command="{Binding RunImportStepCommand}" />
        <KeyBinding Key="S" Modifiers="Alt" Command="{Binding RunScanStepCommand}" />
        <KeyBinding Key="H" Modifiers="Alt" Command="{Binding RunHardenStepCommand}" />
        <KeyBinding Key="K" Modifiers="Alt" Command="{Binding SkipHardenStepCommand}" />
        <KeyBinding Key="V" Modifiers="Alt" Command="{Binding RunVerifyStepCommand}" />
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding OpenOutputFolderCommand}" />
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding RestartWorkflowCommand}" />
    </Window.InputBindings>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,20" LastChildFill="False">
            <TextBlock Text="STIGForge" FontSize="30" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}" VerticalAlignment="Center" DockPanel.Dock="Left"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                <Button Content="?" Width="38" Height="38" Padding="0" Margin="0,0,8,0" TabIndex="900" ToolTip="Help (F1)" FontSize="16" FontWeight="Bold" Command="{Binding ShowHelpCommand}" AutomationProperties.Name="Help"/>
                <Button Content="i" Width="38" Height="38" Padding="0" Margin="0,0,8,0" TabIndex="901" ToolTip="About" FontSize="16" FontWeight="Bold" FontStyle="Italic" Command="{Binding ShowAboutCommand}" AutomationProperties.Name="About"/>
                <Button Content="&#xE713;" Width="38" Height="38" Padding="0" TabIndex="902" ToolTip="Settings" FontFamily="Segoe MDL2 Assets" FontSize="16" Command="{Binding ShowSettingsCommand}" AutomationProperties.Name="Settings"/>
            </StackPanel>
        </DockPanel>

        <!-- Dashboard -->
        <views:DashboardView Grid.Row="1"/>
    </Grid>
</Window>
