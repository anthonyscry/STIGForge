<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1A1D23"/>
  <SolidColorBrush x:Key="SurfaceBrush" Color="#22262E"/>
  <SolidColorBrush x:Key="SurfaceMutedBrush" Color="#1E2128"/>
  <SolidColorBrush x:Key="BorderBrush" Color="#363B44"/>
  <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E4E8EE"/>
  <SolidColorBrush x:Key="TextMutedBrush" Color="#8B95A5"/>
  <SolidColorBrush x:Key="AccentBrush" Color="#4DA3FF"/>
  <SolidColorBrush x:Key="AccentSoftBrush" Color="#1A3A5C"/>
  <SolidColorBrush x:Key="SuccessBrush" Color="#34D399"/>
  <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
  <SolidColorBrush x:Key="DangerBrush" Color="#EF4444"/>

  <!-- Button -->
  <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#2A2E37"/>
  <SolidColorBrush x:Key="ButtonHoverBrush" Color="#1A3A5C"/>
  <SolidColorBrush x:Key="ButtonPressedBrush" Color="#264A70"/>
  <SolidColorBrush x:Key="ButtonDisabledBgBrush" Color="#1E2128"/>
  <SolidColorBrush x:Key="ButtonDisabledBorderBrush" Color="#2A2E37"/>
  <SolidColorBrush x:Key="ButtonDisabledFgBrush" Color="#505868"/>

  <!-- TabItem -->
  <SolidColorBrush x:Key="TabBgBrush" Color="#22262E"/>
  <SolidColorBrush x:Key="TabSelectedBgBrush" Color="#1A1D23"/>
  <SolidColorBrush x:Key="TabHoverBgBrush" Color="#2A2E37"/>
  <SolidColorBrush x:Key="TabPanelBgBrush" Color="#1A1D23"/>

  <!-- ComboBox / Dropdown -->
  <SolidColorBrush x:Key="ComboBoxBgBrush" Color="#22262E"/>
  <SolidColorBrush x:Key="ComboBoxPopupBgBrush" Color="#22262E"/>
  <SolidColorBrush x:Key="ComboBoxItemHoverBrush" Color="#2A2E37"/>
  <SolidColorBrush x:Key="ComboBoxArrowBrush" Color="#8B95A5"/>

  <!-- ListViewItem -->
  <SolidColorBrush x:Key="ListItemHoverBrush" Color="#2A2E37"/>
  <SolidColorBrush x:Key="ListItemSelectedBrush" Color="#1A3A5C"/>
  <SolidColorBrush x:Key="ListItemSelectedTextBrush" Color="#E4E8EE"/>
  <SolidColorBrush x:Key="GridViewHeaderBgBrush" Color="#1E2128"/>
  <SolidColorBrush x:Key="GridViewHeaderBorderBrush" Color="#363B44"/>

  <!-- ScrollBar -->
  <SolidColorBrush x:Key="ScrollThumbBrush" Color="#4A5060"/>
  <SolidColorBrush x:Key="ScrollThumbHoverBrush" Color="#5A6270"/>
  <SolidColorBrush x:Key="ScrollTrackBrush" Color="#1E2128"/>
  <SolidColorBrush x:Key="ScrollArrowBrush" Color="#8B95A5"/>

  <!-- Help dialog -->
  <SolidColorBrush x:Key="HelpSectionBrush" Color="#22262E"/>
  <SolidColorBrush x:Key="HelpSectionAltBrush" Color="#1E2128"/>
  <SolidColorBrush x:Key="HelpBorderBrush" Color="#363B44"/>

  <!-- ToolTip -->
  <SolidColorBrush x:Key="ToolTipBgBrush" Color="#2A2E37"/>
  <SolidColorBrush x:Key="ToolTipBorderBrush" Color="#4A5060"/>

</ResourceDictionary>
