<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#0B0D11"/>
  <SolidColorBrush x:Key="SurfaceBrush" Color="#161921"/>
  <SolidColorBrush x:Key="SurfaceMutedBrush" Color="#101319"/>
  <SolidColorBrush x:Key="BorderBrush" Color="#2A2F3B"/>
  <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F8FAFC"/>
  <SolidColorBrush x:Key="TextMutedBrush" Color="#94A3B8"/>
  <SolidColorBrush x:Key="AccentBrush" Color="#3B82F6"/>
  <SolidColorBrush x:Key="AccentSoftBrush" Color="#1E3A8A"/>
  <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
  <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
  <SolidColorBrush x:Key="DangerBrush" Color="#F43F5E"/>
  <SolidColorBrush x:Key="WorkflowStepReadyBrush" Color="#3B82F6"/>
  <SolidColorBrush x:Key="WorkflowStepRunningBrush" Color="#F59E0B"/>
  <SolidColorBrush x:Key="WorkflowStepCompleteBrush" Color="#10B981"/>
  <SolidColorBrush x:Key="WorkflowStepLockedBrush" Color="#475569"/>
  <SolidColorBrush x:Key="WorkflowStepErrorBrush" Color="#F43F5E"/>

  <!-- Button -->
  <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#1E222D"/>
  <SolidColorBrush x:Key="ButtonHoverBrush" Color="#1E3A8A"/>
  <SolidColorBrush x:Key="ButtonPressedBrush" Color="#1D4ED8"/>
  <SolidColorBrush x:Key="ButtonDisabledBgBrush" Color="#101319"/>
  <SolidColorBrush x:Key="ButtonDisabledBorderBrush" Color="#1E222D"/>
  <SolidColorBrush x:Key="ButtonDisabledFgBrush" Color="#475569"/>

  <!-- TabItem -->
  <SolidColorBrush x:Key="TabBgBrush" Color="#161921"/>
  <SolidColorBrush x:Key="TabSelectedBgBrush" Color="#0B0D11"/>
  <SolidColorBrush x:Key="TabHoverBgBrush" Color="#1E222D"/>
  <SolidColorBrush x:Key="TabPanelBgBrush" Color="#0B0D11"/>

  <!-- ComboBox / Dropdown -->
  <SolidColorBrush x:Key="ComboBoxBgBrush" Color="#161921"/>
  <SolidColorBrush x:Key="ComboBoxPopupBgBrush" Color="#161921"/>
  <SolidColorBrush x:Key="ComboBoxItemHoverBrush" Color="#1E222D"/>
  <SolidColorBrush x:Key="ComboBoxArrowBrush" Color="#94A3B8"/>

  <!-- ListViewItem -->
  <SolidColorBrush x:Key="ListItemHoverBrush" Color="#1E222D"/>
  <SolidColorBrush x:Key="ListItemSelectedBrush" Color="#1E3A8A"/>
  <SolidColorBrush x:Key="ListItemSelectedTextBrush" Color="#F8FAFC"/>
  <SolidColorBrush x:Key="GridViewHeaderBgBrush" Color="#101319"/>
  <SolidColorBrush x:Key="GridViewHeaderBorderBrush" Color="#2A2F3B"/>

  <!-- ScrollBar -->
  <SolidColorBrush x:Key="ScrollThumbBrush" Color="#334155"/>
  <SolidColorBrush x:Key="ScrollThumbHoverBrush" Color="#475569"/>
  <SolidColorBrush x:Key="ScrollTrackBrush" Color="#101319"/>
  <SolidColorBrush x:Key="ScrollArrowBrush" Color="#94A3B8"/>

  <!-- Help dialog -->
  <SolidColorBrush x:Key="HelpSectionBrush" Color="#161921"/>
  <SolidColorBrush x:Key="HelpSectionAltBrush" Color="#101319"/>
  <SolidColorBrush x:Key="HelpBorderBrush" Color="#2A2F3B"/>

  <!-- ToolTip -->
  <SolidColorBrush x:Key="ToolTipBgBrush" Color="#1E222D"/>
  <SolidColorBrush x:Key="ToolTipBorderBrush" Color="#334155"/>

</ResourceDictionary>
