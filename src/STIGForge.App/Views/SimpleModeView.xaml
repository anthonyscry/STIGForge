<UserControl x:Class="STIGForge.App.Views.SimpleModeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
        <Grid Margin="10">
          <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel>
              <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="12" Margin="0,0,0,8" Background="{StaticResource SurfaceMutedBrush}">
                <StackPanel>
                  <TextBlock Text="Simple Mode" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,4"/>
                  <TextBlock Text="Answer five questions, then run one button for build + apply + verify + export." Foreground="{StaticResource TextMutedBrush}" TextWrapping="Wrap"/>
                  <TextBlock Text="{Binding GuidedNextAction}" Margin="0,8,0,0" Foreground="{StaticResource TextMutedBrush}" TextWrapping="Wrap"/>
                </StackPanel>
              </Border>

              <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="12" Margin="0,0,0,8" Background="{StaticResource SurfaceBrush}">
                <StackPanel>
                  <TextBlock Text="Question 1: What mission are you running?" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                  <ComboBox Width="320" ItemsSource="{Binding MissionPresets}" SelectedItem="{Binding SelectedMissionPreset}"
                            ToolTipService.ToolTip="Select endpoint hardening, golden image bake, or SCCM PXE image bake preset."/>
                  <TextBlock Text="{Binding MissionPresetGuidance}" Margin="0,8,0,0" Foreground="{StaticResource TextMutedBrush}" TextWrapping="Wrap"/>
                </StackPanel>
              </Border>

              <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="12" Margin="0,0,0,8" Background="{StaticResource SurfaceBrush}">
                <StackPanel>
                  <TextBlock Text="Question 2: What content and profile?" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                  <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Button Content="Select Content..." Width="150" Height="30" Command="{Binding OpenContentPickerCommand}"
                            ToolTipService.ToolTip="Pick which imported STIG/SCAP/GPO packs to include in this mission."/>
                    <TextBlock Text="{Binding SelectedContentSummary}" Margin="10,7,0,0" Foreground="{StaticResource TextMutedBrush}" TextWrapping="Wrap"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Profile:" Width="60" VerticalAlignment="Center"/>
                    <ComboBox Width="420" ItemsSource="{Binding Profiles}" SelectedItem="{Binding SelectedProfile}" DisplayMemberPath="Name"
                              ToolTipService.ToolTip="Profile controls hardening mode, classification scope, and overlay selections."/>
                    <Button Content="Save Profile" Width="120" Margin="8,0,0,0" Command="{Binding SaveProfileCommand}"
                            ToolTipService.ToolTip="Persist current profile values before running."/>
                  </StackPanel>
                </StackPanel>
              </Border>

              <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="12" Margin="0,0,0,8" Background="{StaticResource SurfaceBrush}">
                <StackPanel>
                  <TextBlock Text="Question 3: Which scanner(s) will validate results?" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                  <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Toolkit root:" Width="140" VerticalAlignment="Center"/>
                    <TextBox Width="520" Text="{Binding LocalToolkitRoot}" ToolTipService.ToolTip="Folder containing STIG_SCAP tooling archives or extracted tool folders."/>
                    <Button Content="Activate" Width="80" Margin="6,0,0,0" Command="{Binding ActivateToolkitCommand}"
                            ToolTipService.ToolTip="Auto-configure Evaluate-STIG, SCC, and PowerSTIG from the toolkit folder."/>
                    <Button Content="Open" Width="80" Margin="6,0,0,0" Command="{Binding OpenToolkitRootCommand}"/>
                  </StackPanel>
                  <TextBlock Text="{Binding ToolkitActivationStatus}" Margin="0,0,0,8" Foreground="{StaticResource TextMutedBrush}" TextWrapping="Wrap"/>
                  <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Evaluate-STIG root:" Width="140" VerticalAlignment="Center"/>
                    <TextBox Width="540" Text="{Binding EvaluateStigRoot}" ToolTipService.ToolTip="Folder containing Evaluate-STIG.ps1."/>
                    <Button Content="Browse" Width="80" Margin="6,0,0,0" Command="{Binding BrowseEvaluateStigCommand}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Evaluate args:" Width="140" VerticalAlignment="Center"/>
                    <TextBox Width="626" Text="{Binding EvaluateStigArgs}" ToolTipService.ToolTip="Optional Evaluate-STIG arguments, including answer-file switches."/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="SCAP command:" Width="140" VerticalAlignment="Center"/>
                    <TextBox Width="540" Text="{Binding ScapCommandPath}" ToolTipService.ToolTip="Path to SCAP/SCC executable."/>
                    <Button Content="Browse" Width="80" Margin="6,0,0,0" Command="{Binding BrowseScapCommandCommand}"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="SCAP args:" Width="140" VerticalAlignment="Center"/>
                    <TextBox Width="626" Text="{Binding ScapArgs}" ToolTipService.ToolTip="Arguments that make the tool emit CKL output into the verify folder."/>
                  </StackPanel>
                </StackPanel>
              </Border>

              <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="12" Margin="0,0,0,8" Background="{StaticResource SurfaceBrush}">
                <StackPanel>
                  <TextBlock Text="Question 4: What is your safety posture?" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                  <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <CheckBox Content="Skip snapshot (high risk)" IsChecked="{Binding ApplySkipSnapshot}" Margin="0,0,16,0"
                              ToolTipService.ToolTip="Use only for controlled image bake workflows with external rollback controls."/>
                    <CheckBox Content="Break-glass acknowledged" IsChecked="{Binding BreakGlassAcknowledged}"
                              ToolTipService.ToolTip="Required when snapshot is skipped."/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Break-glass reason:" Width="140" VerticalAlignment="Center"/>
                    <TextBox Width="626" Text="{Binding BreakGlassReason}" IsEnabled="{Binding BreakGlassAcknowledged}"
                             ToolTipService.ToolTip="Specific operator justification recorded in audit log."/>
                  </StackPanel>
                </StackPanel>
              </Border>

              <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="12" Background="{StaticResource SurfaceBrush}">
                <StackPanel>
                  <TextBlock Text="Question 5: Ready to run end-to-end?" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                  <CheckBox Content="Build a new bundle before running" IsChecked="{Binding SimpleBuildBeforeRun}" Margin="0,0,0,8"
                            ToolTipService.ToolTip="Recommended for fresh runs. Uncheck only when reusing an existing bundle path."/>
                  <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Button Content="Run Simple Mission" Width="180" Height="36" FontWeight="SemiBold" Command="{Binding RunSimpleMissionCommand}" IsEnabled="{Binding ActionsEnabled}"
                            ToolTipService.ToolTip="Runs build (optional), apply, verify, and export with safe defaults."/>
                    <Button Content="Open Help" Width="110" Margin="8,0,0,0" Command="{Binding ShowHelpCommand}"/>
                    <Button Content="Open Bundle" Width="110" Margin="8,0,0,0" Command="{Binding OpenBundleFolderCommand}"/>
                  </StackPanel>
                  <TextBlock Text="{Binding StatusText}" Foreground="{StaticResource TextMutedBrush}" TextWrapping="Wrap"/>
                  <TextBlock Text="{Binding OrchStatus}" Margin="0,4,0,0" Foreground="{StaticResource TextMutedBrush}" TextWrapping="Wrap"/>
                </StackPanel>
              </Border>
            </StackPanel>
          </ScrollViewer>
        </Grid>
      
</UserControl>
