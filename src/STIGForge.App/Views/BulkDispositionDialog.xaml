<Window x:Class="STIGForge.App.Views.BulkDispositionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bulk Set Status" Height="350" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource TextPrimaryBrush}">
  <StackPanel Margin="20">
    <TextBlock Text="Bulk Set Status" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
    <TextBlock Text="Apply the same disposition to all controls in a STIG group."
               Foreground="{DynamicResource TextMutedBrush}" Margin="0,0,0,16" TextWrapping="Wrap"/>

    <TextBlock Text="STIG Group:" FontWeight="SemiBold" Margin="0,0,0,4"/>
    <ComboBox ItemsSource="{Binding StigGroups}" SelectedItem="{Binding SelectedStigGroup}" Margin="0,0,0,8"/>
    <TextBlock Foreground="{DynamicResource TextMutedBrush}" Margin="0,0,0,12">
      <Run Text="Matching controls: "/><Run Text="{Binding MatchingCount, Mode=OneWay}"/>
    </TextBlock>

    <TextBlock Text="Status:" FontWeight="SemiBold" Margin="0,0,0,4"/>
    <ComboBox ItemsSource="{Binding Statuses}" SelectedItem="{Binding SelectedStatus}" Margin="0,0,0,12"/>

    <TextBlock Text="Reason (required for Fail/N/A):" FontWeight="SemiBold" Margin="0,0,0,4"/>
    <TextBox Text="{Binding Reason, UpdateSourceTrigger=PropertyChanged}" Height="50" TextWrapping="Wrap" Margin="0,0,0,12"/>

    <StackPanel Orientation="Horizontal">
      <Button Content="Apply" Width="100" Height="30" Command="{Binding ApplyCommand}" Margin="0,0,8,0"/>
      <Button Content="Close" Width="100" Height="30" Click="CloseClick"/>
    </StackPanel>
    <TextBlock Text="{Binding ResultMessage}" Foreground="{DynamicResource WarningBrush}" Margin="0,8,0,0" TextWrapping="Wrap"/>
  </StackPanel>
</Window>
