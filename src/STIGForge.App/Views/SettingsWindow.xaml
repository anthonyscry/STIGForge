<Window x:Class="STIGForge.App.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="560"
        Width="760"
        MinHeight="560"
        MinWidth="760"
        MaxHeight="560"
        MaxWidth="760"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}">
  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
      <StackPanel>
        <GroupBox Header="Paths" Margin="0,0,0,16" Padding="12">
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="0,0,0,12" LastChildFill="False">
              <TextBlock Text="Auto-scan searches this app/workspace folder only." VerticalAlignment="Center" Foreground="{DynamicResource TextMutedBrush}"/>
              <Button DockPanel.Dock="Right" Content="Auto Scan Setup Paths" Width="190" Height="32" Margin="12,0,0,0" Command="{Binding AutoScanSetupPathsCommand}"/>
            </DockPanel>

            <StackPanel Grid.Row="1" Margin="0,0,0,12">
              <TextBlock Text="Import Folder" FontWeight="SemiBold" Margin="0,0,0,4"/>
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding ImportFolderPath, UpdateSourceTrigger=PropertyChanged}" Height="32" VerticalContentAlignment="Center"/>
                <Button Grid.Column="1" Content="Browse..." Width="88" Height="32" Margin="8,0,0,0" Command="{Binding BrowseImportFolderCommand}"/>
              </Grid>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,12">
              <TextBlock Text="Evaluate-STIG Tool Path" FontWeight="SemiBold" Margin="0,0,0,4"/>
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding EvaluateStigToolPath, UpdateSourceTrigger=PropertyChanged}" Height="32" VerticalContentAlignment="Center"/>
                <Button Grid.Column="1" Content="Browse..." Width="88" Height="32" Margin="8,0,0,0" Command="{Binding BrowseEvaluateStigCommand}"/>
              </Grid>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,0,0,12">
              <TextBlock Text="SCC Tool Path" FontWeight="SemiBold" Margin="0,0,0,4"/>
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding SccToolPath, UpdateSourceTrigger=PropertyChanged}" Height="32" VerticalContentAlignment="Center"/>
                <Button Grid.Column="1" Content="Browse..." Width="88" Height="32" Margin="8,0,0,0" Command="{Binding BrowseSccCommand}"/>
              </Grid>
            </StackPanel>

            <StackPanel Grid.Row="4" Margin="0,0,0,12">
              <TextBlock Text="Output Folder" FontWeight="SemiBold" Margin="0,0,0,4"/>
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding OutputFolderPath, UpdateSourceTrigger=PropertyChanged}" Height="32" VerticalContentAlignment="Center"/>
                <Button Grid.Column="1" Content="Browse..." Width="88" Height="32" Margin="8,0,0,0" Command="{Binding BrowseOutputFolderCommand}"/>
              </Grid>
            </StackPanel>

            <StackPanel Grid.Row="5">
              <TextBlock Text="Machine Target" FontWeight="SemiBold" Margin="0,0,0,4"/>
              <TextBox Text="{Binding MachineTarget, UpdateSourceTrigger=PropertyChanged}" Height="32" VerticalContentAlignment="Center"/>
            </StackPanel>
          </Grid>
        </GroupBox>

        <GroupBox Header="Export Formats" Padding="12">
          <StackPanel>
            <CheckBox Content="CKL" IsChecked="{Binding ExportCkl}" Margin="0,0,0,8"/>
            <CheckBox Content="CSV" IsChecked="{Binding ExportCsv}" Margin="0,0,0,8"/>
            <CheckBox Content="XCCDF" IsChecked="{Binding ExportXccdf}"/>
          </StackPanel>
        </GroupBox>
      </StackPanel>
    </ScrollViewer>

    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
      <Button Content="Cancel" Width="100" Height="32" Margin="0,0,8,0" Click="Cancel_Click" IsCancel="True"/>
      <Button Content="Save" Width="100" Height="32" Click="Save_Click" IsDefault="True"/>
    </StackPanel>
  </Grid>
</Window>
