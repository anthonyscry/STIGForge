<UserControl x:Class="STIGForge.App.Views.WorkflowStepCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             d:DesignHeight="240" d:DesignWidth="250"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              mc:Ignorable="d"
              Margin="0,0,6,6"
              MinWidth="188"
              HorizontalAlignment="Stretch">
    <UserControl.Resources>
        <Style x:Key="WorkflowStepCardBorderStyle"
               TargetType="Border"
               BasedOn="{StaticResource WorkflowCardBorderStyle}">
            <Setter Property="BorderBrush"
                    Value="{Binding StepState, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StepStateToBorderBrush}}" />
        </Style>
    </UserControl.Resources>

     <Border Style="{DynamicResource WorkflowStepCardBorderStyle}"
              BorderThickness="1"
              Padding="10"
              MinHeight="150"
              Background="{DynamicResource SurfaceBrush}"
              CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.25" BlurRadius="12" Direction="270" ShadowDepth="4" />
        </Border.Effect>
        <StackPanel>
            <TextBlock Text="{Binding StepName, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8" />

            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <Button Content="{Binding RunButtonLabel, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Width="92"
                        Height="30"
                        Margin="0,0,6,0"
                        HorizontalAlignment="Left"
                        TabIndex="{Binding RunButtonTabIndex, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{DynamicResource WorkflowDashboardButtonStyle}"
                        Command="{Binding RunCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        ToolTip="{Binding RunButtonToolTip, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        AutomationProperties.Name="{Binding RunButtonAutomationName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        AutomationProperties.HelpText="{Binding RunButtonToolTip, RelativeSource={RelativeSource AncestorType=UserControl}}" />

                <Button Content="{Binding SecondaryButtonLabel, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Width="96"
                        Height="30"
                        HorizontalAlignment="Left"
                        TabIndex="{Binding SecondaryButtonTabIndex, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Visibility="{Binding SecondaryButtonLabel, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NullOrEmptyToCollapsed}}"
                        Style="{DynamicResource WorkflowDashboardButtonStyle}"
                        Command="{Binding SecondaryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        ToolTip="{Binding SecondaryButtonToolTip, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        AutomationProperties.Name="{Binding SecondaryButtonAutomationName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        AutomationProperties.HelpText="{Binding SecondaryButtonToolTip, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </StackPanel>

            <ProgressBar Height="6"
                         IsIndeterminate="True"
                         Foreground="{DynamicResource AccentBrush}"
                         Background="Transparent"
                         BorderThickness="0"
                         Visibility="{Binding StepState, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StepStateToRunningVisibility}}">
                <ProgressBar.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </ProgressBar.Resources>
            </ProgressBar>

            <TextBlock Text="&#x2713; Complete"
                       Margin="0,6,0,0"
                       Foreground="{DynamicResource SuccessBrush}"
                       Visibility="{Binding StepState, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StepStateToCompleteVisibility}}" />

            <StackPanel Orientation="Horizontal"
                        Margin="0,6,0,0"
                        Visibility="{Binding StepState, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StepStateToErrorVisibility}}">
                <TextBlock Text="&#x2717;"
                           Foreground="{DynamicResource DangerBrush}"
                           FontWeight="SemiBold"
                           Margin="0,0,6,0" />
                <TextBlock Text="{Binding ErrorMessage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Foreground="{DynamicResource DangerBrush}"
                           TextWrapping="Wrap" />
            </StackPanel>

            <Button x:Name="RetryButton"
                    Content="Try Again"
                    Height="28"
                    Width="90"
                    Margin="0,6,0,0"
                    HorizontalAlignment="Left"
                    TabIndex="{Binding RecoveryButtonTabIndex, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Style="{DynamicResource WorkflowDashboardButtonStyle}"
                    Command="{Binding RunCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Visibility="{Binding StepState, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StepStateToErrorVisibility}}"
                    ToolTip="{Binding RecoveryButtonToolTip, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    AutomationProperties.Name="{Binding RecoveryButtonAutomationName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    AutomationProperties.HelpText="{Binding RecoveryButtonToolTip, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </StackPanel>
    </Border>
</UserControl>
