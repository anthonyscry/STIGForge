{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/workspace/stigforge",
        "/workspace/stigforge/.stigforge",
        "/workspace/stigforge/exports"
      ]
    },
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git",
        "--repo",
        "/workspace/stigforge"
      ]
    },
    "sqlite": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sqlite",
        "--db-path",
        "/workspace/stigforge/.stigforge/stigforge.db"
      ]
    }
  }
}
