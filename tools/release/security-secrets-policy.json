{
  "deterministicPolicy": {
    "mode": "local-pattern-scan"
  },
  "excludedDirectories": [
    ".git",
    ".stigforge",
    ".artifacts",
    ".sisyphus",
    "bin",
    "obj",
    "import",
    "STIG_SCAP"
  ],
  "includedExtensions": [
    ".cs",
    ".csproj",
    ".props",
    ".targets",
    ".json",
    ".yml",
    ".yaml",
    ".ps1",
    ".md",
    ".xml",
    ".txt",
    ".config"
  ],
  "ignoredFileGlobs": [
    "README.md",
    "docs/**",
    "tests/**/fixtures/**"
  ],
  "ignoredLinePatterns": [
    "example",
    "placeholder",
    "sample"
  ]
}
